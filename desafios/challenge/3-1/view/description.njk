{% extends "layout.njk" %}


{% block head%}
    <title>Rocketseat {{course.name}}</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
{% endblock %}

{% block headermenu %}
     <li><a href="/">Home</a></li>
     <li><a href="/about">About us</a></li>
{% endblock %}


{% block content %}
    <section class="info description" id="{{course.name}}">
            <div class="img-container">
                <img src="{{course.logoUrl}}" alt="{{course.name}}">
            </div>
            <div class="container">
                <div class="company">
                    <h1 class="company__name">{{course.name}}</h1>
                    <div class="company__description">
                        <h3>{{course.description}}<h3>
                        <p>{{course.modules}} m√≥dulos</p>
                        <p class="card__price"><a href="https://rocketseat.com.br/{{course.name}}" target="_blank" rel="noopener noreferrer">{{course.price}}</a></p>
                    </div>
                </div>
            </div>
    </section>
{% endblock content %}

{% block scripts %}
    <script src="/scripts.js"></script>
{% endblock %}
